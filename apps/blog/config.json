{
  "meta": {
    "name": "blog",
    "controllerDirectory" : "controllers",
    "modelDirectory" : "models",
    "validatorDirectory": "validators"
  },
  "endpoints": [
    {
      "path" : "/posts",
      "methods" : [
        {
          "type" : "GET",
          "controller" : {
            "standardController": true,
            "model": "Post",
            "method": "retrieveDocuments"
          }
        },
        {
          "type" : "POST",
          "controller" : {
            "standardController": true,
            "model": "Post",
            "method": "createDocument"
          }
        }
      ]
    },
    {
      "path" : "/posts/:id",
      "methods" : [
        {
          "type" : "GET",
          "controller" : {
            "standardController": true,
            "model": "Post",
            "method": "readDocument"
          }
        },
        {
          "type" : "PATCH",
          "controller" : {
            "standardController": true,
            "model": "Post",
            "method": "updateDocument"
          }
        }
      ]
    },
    {
      "path" : "/posts/:relation/:id",
      "methods" : [
        {
          "type" : "GET",
          "controller" : {
            "standardController": true,
            "model" : "Post",
            "method": "retrieveSiblings"
          }
        }
      ]
    },
    {
      "path" : "/categories",
      "methods" : [
        {
          "type" : "GET",
          "controller" : {
            "standardController": true,
            "model" : "Category",
            "method": "retrieveDocuments"
          }
        },
        {
          "type" : "POST",
          "controller" : {
            "standardController": true,
            "model": "Category",
            "method": "createDocument"
          }
        }
      ]
    }
  ]
}
